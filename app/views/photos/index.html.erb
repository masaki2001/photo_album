<div>
  <%= link_to "ログアウト", sessions_path, method: :delete %>
  <br>
  <h1>写真一覧</h1>
  <%= link_to "MyTweetAppと連携", auth_external_services_path, method: :post %>
  <br>
  <%= link_to "写真をアップロード", new_user_photo_path(@user) %>
  <br>
  <% @user_photos.reverse.each do |user_photo| %>
    <div style="float: left; margin: 10px;">
      <div>
        <p><%= user_photo.title %></p>
        <%= image_tag user_photo.image.representation(resize_to_limit: [200, 200]) %>
        <%= button_to 'ツイートする', tweet_external_services_path(title: user_photo.title, image_url: rails_representation_url(user_photo.image.variant({}), only_path: false)), method: :post %>
      </div>
    </div>
  <% end %>
</div>
